@model db.NN_user

@{
    ViewBag.Title = "Detail";
}


<div class="dialog">
    <div class="display-label">
        <!--用户ID-->
        @Html.DisplayNameFor(model => model.userID)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.userID)
    </div>

    <div class="display-label">
        <!--用户昵称-->
        @Html.DisplayNameFor(model => model.userName)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.userName)
    </div>

    <div class="display-label">
        <!--头像-->
        @Html.DisplayNameFor(model => model.profile)
    </div>
    <div class="display-field">
        <img style="width:30px;height:25px;" src="data:jpg/jpeg;base64,@Convert.ToBase64String((byte[])Model.profile)" alt="图像">
    </div>

    <div class="display-label">
        <!--注册时间-->
        @Html.DisplayNameFor(model => model.registerDateTime)
    </div>
    <div class="display-field">
        @Html.DisplayDateFor(model => model.registerDateTime)
    </div>

    <div class="display-label">
        <!--登录密码-->
        @Html.DisplayNameFor(model => model.password)
        
    </div>
    <div class="display-field">
        @Html.Raw("**********")
    </div>

    <div class="display-label">
        <!--性别-->
        @Html.DisplayNameFor(model => model.gender)
    </div>
    <div class="display-field read">
        @{
            if (Model.gender == false)
            {
                <input type="radio" name="genderRadio" checked>
                <label>男</label>
                <input type="radio" name="genderRadio">
                <label>女</label>
            }
            else
            {
                <input type="radio" name="genderRadio">
                <label>男</label>
                <input type="radio" name="genderRadio" checked>
                <label>女</label>
            }
        }

    </div>

    <div class="display-label">
        <!--年龄-->
        @Html.Label("年龄")
    </div>
    <div class="display-field">
        @Html.Label(db.bll.NN_user.getAge(Model.birth).ToString())
    </div>

    <div class="display-label">
        <!--账户类型-->
        @Html.DisplayNameFor(model => model.type)
    </div>
    <div class="display-field">

        @{
            if (Model.type == 0)
            {
                <label>普通用户</label>
            }
            else
            {
                <label>内容创作者</label>
            }
        }
    </div>

    <div class="display-label">
        <!--账号状态-->
        @Html.DisplayNameFor(model => model.status)
    </div>
    <div class="display-field">
        @{
            if (Model.status == false)
            {
                <label>正常</label>
            }
            else
            {
                <label>封禁</label>
            }
        }
    </div>

    <div class="display-label">
        <!--备注-->
        @Html.DisplayNameFor(model => model.remark)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.remark)
    </div>

