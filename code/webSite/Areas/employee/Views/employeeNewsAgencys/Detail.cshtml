@model db.NN_NewsAgency

@{
	ViewBag.Title = "Detail";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
	@Html.ValidationSummary(true)
    
	<div class="dialog">
		<div class="editor-label hide">
			@Html.LabelFor(model => model.rowID)
		</div>
		<div class="editor-field hide">	
			@Html.EditorFor(model => model.rowID)
			@Html.ValidationMessageFor(model => model.rowID)
        </div>

		<div class="editor-label">
			@Html.LabelFor(model => model.newsAgencyID)
		</div>
		<div class="editor-field read">	
			@Html.EditorFor(model => model.newsAgencyID)
			@Html.ValidationMessageFor(model => model.newsAgencyID)
        </div>
        
        <div class="editor-label">
			@Html.LabelFor(model => model.newsAgencyName)
		</div>
		<div class="editor-field">	
			@Html.EditorFor(model => model.newsAgencyName)
			@Html.ValidationMessageFor(model => model.newsAgencyName)
        </div>

        <div class="editor-label">
			@Html.LabelFor(model => model.status)
		</div>
        <div class="editor-field">
            @if (Model.status == 0)
            {
            <label>正常</label>
            }
            else
            {
            <label>封禁</label>
            }
            @Html.ValidationMessageFor(model => model.status)
        </div>

        <div class="editor-label">
			@Html.LabelFor(model => model.remark)
		</div>
		<div class="editor-field">	
			@Html.EditorFor(model => model.remark)
			@Html.ValidationMessageFor(model => model.remark)
        </div>

        <p class="button">
            <a class="billSave opSave" data-close="true">保存</a>
            <a class="opClose">关闭</a>
        </p>
    </div>
}
